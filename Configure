timeincl='$timeincl'
timetype='$timetype'
touch='$touch'
tr='$tr'
troff='$troff'
uidtype='$uidtype'
uname='$uname'
uniq='$uniq'
usenm='$usenm'
usevfork='$usevfork'
usrinc='$usrinc'
utmp='$utmp'
uuname='$uuname'
